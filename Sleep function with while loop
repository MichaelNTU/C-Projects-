// Section2 Program1.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <Windows.h>
#include <iostream>
using namespace std;

int _tmain(int argc, _TCHAR* argv[])

{	
	int count = 0;

	while (count<=9)
	{
		if(count<10)
		{
			Sleep(5000); //NNN is time in milliseconds
			--count;
			cout<<count<<endl;
			continue;
		}
		
		else if(count>10)
		{
		
			Sleep(1000);
			count--;
			cout<<count<<endl;
			continue;
		}
	}

	cout<<"This is the end of the program"<<endl;

	return 0;
}
